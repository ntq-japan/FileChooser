<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@color/background_screen</item>
        <item name="android:colorBackground">@color/background_screen</item>
        <item name="android:buttonStyle">@style/ButtonPrimary</item>
    </style>

    <style name="Translucent" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:disabledAlpha">0.8</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:minHeight">@dimen/item_min_height</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:padding">@dimen/space8</item>
        <item name="android:textSize">@dimen/h6</item>
        <item name="android:textColor">@color/icon</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ButtonPrimary" parent="@style/Button">
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="ButtonAccent" parent="@style/Button">
        <item name="android:background">@drawable/button_accent</item>
    </style>

    <style name="ButtonPositive" parent="@style/Button">
        <item name="android:background">@drawable/button_positive</item>
    </style>

    <style name="ButtonNegative" parent="@style/Button">
        <item name="android:background">@drawable/button_negative</item>
    </style>

    <style name="Text" parent="@android:style/Widget.Holo.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextWidget" parent="@android:style/Widget.Holo.TextView">
        <item name="android:background">@color/primary</item>
        <item name="android:textSize">@dimen/h6</item>
        <item name="android:textColor">@color/icon</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:paddingTop">@dimen/space6</item>
        <item name="android:paddingLeft">@dimen/space8</item>
        <item name="android:paddingRight">@dimen/space8</item>
        <item name="android:paddingBottom">@dimen/space8</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextHeader" parent="@style/Text">
        <item name="android:paddingTop">@dimen/space8</item>
        <item name="android:textSize">@dimen/h6</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TextTile" parent="@style/Text">
        <item name="android:paddingTop">@dimen/space9</item>
        <item name="android:paddingLeft">@dimen/space8</item>
        <item name="android:paddingRight">@dimen/space8</item>
        <item name="android:textSize">@dimen/h6</item>
        <item name="android:textColor">@color/primary_text_dark</item>
    </style>

    <style name="TextPrimary" parent="@style/Text">
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextSecondary" parent="@style/Text">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="TextHint" parent="@style/Text">
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/divider</item>
    </style>
</resources>
